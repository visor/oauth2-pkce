{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "es2019",
      "dom"
    ],
    "moduleResolution": "node",
    "allowJs": true
  }
}
